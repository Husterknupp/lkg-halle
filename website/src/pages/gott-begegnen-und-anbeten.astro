---
import BaseLayout from "../layouts/BaseLayout.astro";
import EventCard from "../components/EventCard.astro";
import gottesdienstImg from "../assets/gottesdienst.jpg";
---

<BaseLayout title="Gott Begegnen & Anbeten | LKG Halle">
  <main>
    <!-- Hero Section -->
    <section class="relative w-full min-h-[240px] flex items-center justify-center mb-8 bg-primary-500">
      <div class="relative z-10 text-white text-center px-4 py-8 w-full max-w-4xl mx-auto">
        <h1 class="font-serif text-3xl md:text-4xl mb-4">
          Gott Begegnen & Anbeten
        </h1>
        <p class="font-sans text-lg md:text-xl opacity-90">
          Gemeinsam im Glauben wachsen und Gott anbeten
        </p>
      </div>
    </section>

    <!-- Content Section -->
    <section class="max-w-4xl mx-auto px-4 py-8">
      <div class="grid md:grid-cols-2 gap-8 items-start">
        <!-- Image -->
        <div>
          <img 
            src={gottesdienstImg.src} 
            alt="Gottesdienst" 
            class="w-full rounded-lg shadow-lg"
          />
        </div>
        
        <!-- Content -->
        <div>
          <h2 class="font-serif text-2xl mb-6 text-gray-900">Unsere Gottesdienste</h2>
          
          <!-- Event Cards -->
          <div class="space-y-6 mb-8">
            <EventCard
              title="Gottesdienst mit Abendmahl"
              time="Sonntags um 10:00 Uhr"
              place="Ludwig-Stur-Str. 5, 06108 Halle (Saale)"
              description="Wir laden Sie herzlich ein zu unserem wöchentlichen Gottesdienst. Einmal im Monat feiern wir das Heilige Abendmahl. In unserer Gemeinschaft steht die persönliche Beziehung zu Gott im Mittelpunkt."
              accentColor="primary-bright"
            />

            <EventCard
              title="EC-Kreis"
              time="Freitags um 19:30 Uhr"
              place="Ludwig-Stur-Str. 5, 06108 Halle (Saale)"
              description="Der EC-Kreis bietet die Möglichkeit für vertiefende Gespräche über den Glauben und persönlichen Austausch in kleinerer Runde. Eine offene Gemeinschaft für junge Erwachsene und alle, die sich jung fühlen."
              accentColor="primary-stale"
            />

            <EventCard
              title="Bibelgespräch"
              time="Donnerstags um 19:00 Uhr"
              place="Ludwig-Stur-Str. 5, 06108 Halle (Saale)"
              description="Gemeinsam erkunden wir die Bibel in entspannter Atmosphäre. Hier ist Raum für Fragen, Diskussion und das gemeinsame Entdecken der biblischen Botschaft. Alle sind herzlich willkommen."
              accentColor="primary-500"
            />
          </div>

          <!-- Description -->
          <div class="prose prose-gray">
            <p class="text-gray-700 leading-relaxed mb-4">
              Alle Veranstaltungen finden in unseren Räumlichkeiten in der Ludwig-Stur-Str. 5 statt. Wir freuen uns auf Ihren Besuch!
            </p>
          </div>

          <!-- YouTube Link -->
          <div class="mt-8">
            <a
              href="https://www.youtube.com/results?search_query=lkg+halle"
              class="inline-block font-sans bg-primary-stale hover:bg-primary-bright text-white font-semibold py-3 px-6 rounded shadow transition-colors duration-200"
            >
              YouTube Livestreams ansehen »
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>