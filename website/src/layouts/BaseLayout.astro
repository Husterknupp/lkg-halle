---
import "../styles/global.css"; // import global styles here because this is the shared base layout
import Logo from "../assets/logo-gvsa.svg";

const { title } = Astro.props;
const pathname = Astro.url.pathname; // context object: https://docs.astro.build/en/reference/api-reference/#the-context-object
const navItems = [
  { name: "Startseite", href: "/" },
  { name: "Interner Bereich", href: "/interner-bereich" },
];
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="mx-[10vw]">
      <header
        class="flex items-center justify-between px-4 py-2 bg-white border-b border-gray-200"
      >
        <div class="flex items-center">
          <Logo class="w-12 h-12 mr-2" />
          <span class="text-lg font-bold font-serif whitespace-nowrap"
            >Landeskirchliche Gemeinschaft</span
          >
        </div>
        <nav class="hidden md:block">
          <ul class="flex space-x-6 font-sans text-base">
            {
              navItems.map((item) => (
                <li>
                  <a
                    href={item.href}
                    class={`hover:underline ${
                      pathname === item.href ? "underline" : ""
                    }`}
                  >
                    {item.name}
                  </a>
                </li>
              ))
            }
          </ul>
        </nav>

        <!-- Mobile burger menu -->
        <div class="md:hidden relative">
          <button
            id="burger"
            class="flex flex-col justify-center items-center w-10 h-10"
            aria-label="Navigationsmenü öffnen"
            onclick="document.getElementById('mobile-menu').classList.toggle('hidden')"
          >
            <span class="block w-6 h-0.5 bg-gray-800 mb-1"></span>
            <span class="block w-6 h-0.5 bg-gray-800 mb-1"></span>
            <span class="block w-6 h-0.5 bg-gray-800"></span>
          </button>
          <div
            id="mobile-menu"
            class="hidden absolute right-0 mt-2 w-48 bg-white border border-gray-200 rounded shadow-lg z-50"
          >
            <ul class="flex flex-col font-sans text-base">
              <li>
                <a href="/" class="block px-4 py-2 hover:bg-gray-100"
                  >Startseite</a
                >
              </li>
              <li>
                <a
                  href="/interner-bereich"
                  class="block px-4 py-2 hover:bg-gray-100">Interner Bereich</a
                >
              </li>
            </ul>
          </div>
        </div>
      </header>

      <slot />

      <address>map + address information</address>
      <footer>FOOTER</footer>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    font-family: var(--font-serif);
  }
  :root {
    --primary-color: rgb(87, 166, 217);
    --secondary-color: rgb(241, 195, 91);
    /* --secondary-color: rgb(142, 68, 173); */
    --text-color: rgb(68, 68, 68);
    --background-color: rgb(236, 240, 241);
    --blue1: rgb(87, 166, 217);
    --blue2: rgb(51, 120, 163);
    --blue3: rgb(120, 169, 180);
