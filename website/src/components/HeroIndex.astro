---
import backgroundImage from "../assets/hintergrund-trauben-hero.jpg";
const dateAndPlace = "am 15. Juni in der Ludwig-Stur-Str. 5";
---

<section
  class="relative w-full min-h-[340px] flex items-center justify-center mb-8 bg-cover bg-center"
  style={`background-image: url(${backgroundImage.src});`}
>
  <div class="absolute inset-0 bg-black/45 z-0"></div>
  <div
    class="relative z-10 text-white text-center px-4 py-10 w-full max-w-3xl mx-auto"
  >
    <h1 class="font-serif text-3xl md:text-4xl mb-3">
      Gottesdienst mit Abendmahl um 10 Uhr
    </h1>
    <div class="font-serif text-xl mb-6">
      {dateAndPlace}
    </div>
    <a
      href="https://www.youtube.com/results?search_query=lkg+halle"
      class="font-sans bg-primary-stale hover:bg-primary-bright text-white font-semibold py-3 px-6 rounded shadow transition-colors duration-200 inline-block"
      >YOUTUBE LIVESTREAMS</a
    >
  </div>
</section>
