---
import { Image } from "astro:assets";

export interface Props {
  image: ImageMetadata;
  title: string;
  description: string;
  time: string;
  place: string;
  href: string;
}
const { image, title, description, time, place, href } = Astro.props;
---

<a
  href={href}
  class="group flex flex-col items-center text-center p-6 bg-white rounded-lg shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300"
>
  <div class="relative mb-6">
    <Image
      src={image}
      alt={title}
      class="w-32 h-32 rounded-full object-cover border-4 border-white shadow-lg duration-300 group-hover:scale-105 group-hover:border-primary-bright group-focus:scale-105 group-focus:border-primary-bright"
      loading="lazy"
    />
  </div>
  
  <h3 class="text-xl font-bold mb-4 text-gray-900">
    {title}
  </h3>
  
  <!-- Time and Place Section - Prominently displayed -->
  <div class="mb-6 w-full space-y-3">
    <!-- Time -->
    <div class="flex items-center justify-center text-primary-bright">
      <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
      </svg>
      <span class="font-semibold text-lg">{time}</span>
    </div>
    
    <!-- Place -->
    <div class="flex items-center justify-center text-primary-bright">
      <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
      </svg>
      <span class="font-semibold text-lg">{place}</span>
    </div>
  </div>

  <!-- Divider -->
  <div class="w-16 h-0.5 bg-gray-200 mx-auto mb-4 group-hover:bg-primary-bright group-focus:bg-primary-bright transition-colors duration-300"></div>
  
  <!-- Description -->
  <p class="mb-6 text-gray-700 leading-relaxed">{description}</p>
  
  <!-- Call to action -->
  <span class="mt-auto px-6 py-2 bg-primary-stale hover:bg-primary-bright text-white font-semibold rounded-full transition-colors duration-200 group-hover:shadow-lg">
    Mehr erfahren Â»
  </span>
</a>