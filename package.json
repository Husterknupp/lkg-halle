{
  "name": "lkg-halle",
  "version": "1.0.0",
  "description": "update weekly events via scraping",
  "main": "index.js",
  "scripts": {
    "codeceptjs": "codeceptjs run --steps",
    "codeceptjs:headless": "HEADLESS=true codeceptjs run --steps",
    "codeceptjs:ui": "codecept-ui --app",
    "codeceptjs:demo": "codeceptjs run --steps -c node_modules/@codeceptjs/examples",
    "codeceptjs:demo:headless": "HEADLESS=true codeceptjs run --steps -c node_modules/@codeceptjs/examples",
    "codeceptjs:demo:ui": "codecept-ui --app  -c node_modules/@codeceptjs/examples",
    "update-slider": "HEADLESS=true codeceptjs run --grep \"Gottesdienst Display\"",
    "get-next-sunday": "node -e 'require(\"dotenv\").config(); require(\"./src/gottesdienst_display/get_next_sunday.js\").getNextSunday()'"
  },
  "author": "husterknupp",
  "license": "MIT",
  "dependenciesComments": {
    "codeceptjs": "Had problems upgrading to v3.3 because of internal plugin. Script couldn't get past wp login form. See https://github.com/codeceptjs/CodeceptJS/issues/3600"
  },
  "dependencies": {
    "@codeceptjs/configure": "~0.10.0",
    "@codeceptjs/examples": "~1.2.1",
    "@codeceptjs/ui": "~0.5.0",
    "@wdio/cli": "~7.30.2",
    "@wdio/selenium-standalone-service": "~7.8.0",
    "codeceptjs": "~3.5.3",
    "codeceptjs-resemblehelper": "~1.9.6",
    "csv-parser": "~3.0.0",
    "dayjs": "~1.11.7",
    "dotenv": "~16.0.3",
    "faker": "~5.5.3",
    "googleapis": "^108.0.0",
    "intl-dateformat": "~0.1.4",
    "neat-csv": "~7.0.0",
    "pkg": "~5.8.1",
    "playwright": "~1.31.2",
    "prettier": "~2.8.4",
    "webdriverio": "~7.30.2"
  },
  "devDependencies": {}
}
